<h2><%= "Create Profile" %></h2><br>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <strong style='color: red;'><%= e %></strong>
    <br/><br/>
  <% end %>
<% end %>

<%= form_with model: @admin, url: '/admins', method: 'POST' do |f| %>
       <%= f.label :name %>
       <%= f.text_field :name %>
  
       <%= f.label :username %>
       <%= f.text_field :username %>

    <%= f.label :email %>
  <%= f.email_field :email %>

     <%= f.label :position %>
  <%= f.text_field :position %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign UP!!" %>
<% end %>





