<%#= render 'form' %>
<h5><%= "Sign in to PROJECTer" %></h5><br>
<% if flash.now[:alert] %>
    <div class="alert alert-danger" role="alert">
        Incorrect username or password.
    </div>
<% end %>
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <p class="card-text">
            <%= form_for :auth do |f| %>
                <%= "Username" %><br>
                <%= f.text_field :username, :class => 'input' %><br><br>
                <%= "Password" %><br>
                <%= f.password_field :password, :class => 'input' %><br><br>
                <%= f.submit 'Sign In', :class => 'btn btn-success btn-block' %>
            <% end %>
            <a><button class="btn btn-outline-success my-2 my-sm-0" href="../admin/new" type="submit">Create New Account
            </button></a>
      </p>
  </div>
</div>